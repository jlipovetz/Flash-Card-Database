  <style>
    body {
      margin: 0;
      /* Remove default margin */
    }

    .main-container {
      display: flex;
    }

    .card-deck {
      display: flex;
      flex-direction: column;
      /* Align items in a column */
      justify-content: center;
      align-items: center;
      height: 100vh;
      /* Adjust the height as needed */
    }

    .card {
      width: 100px;
      height: 150px;
      border: 1px solid #000;
      margin: 10px;
      text-align: center;
      line-height: 150px;
      font-size: 18px;
      background-color: #f0f0f0;
    }

    .project {
      width: 222px;
      height: 1000px;
      background-color: rgb(211, 211, 211);
      margin: 20px;
      /* Adjust margin as needed */
    }

    .navbar {
      font-family: audiowide;
      color: #0F0F0F;
      background: linear-gradient(0deg, rgb(174, 176, 174) 0%, rgb(17, 56, 15) 100%);
    }

    .nav-link {
      onmouseover: "this.style.backgroundColor='#8347FA'";
      onmouseout: "this.style.backgroundColor=''";
    }
  </style>
</head>

<body>
  <header class="header">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <h1>Flashcard Database for Students</h1>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#dark-nav"
          area-controls="darknav" area-expanded="false" area-label="toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="row justify-content-end">
          <div class="collapse navbar-collapse" id="dark-nav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                {{#if loggedIn}}
                <a class="nav-link" href="/deck-edit" data-bs-toggle="modal" data-bs-target="#pet-finder-modal">
                  <h5>Create a deck</h5>
                </a>
                {{else}}
                <a class="nav-link" href="/login" data-bs-toggle="modal" data-bs-target="#pet-finder-modal">
                  <h5>Create a deck</h5>
                </a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="collapse navbar-collapse" id="dark-nav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                {{#if loggedIn}}
                <button id="logout" class="btn btn-danger">Logout</button>
                {{else}}
                <a class="nav-link" href="/login" data-bs-toggle="modal" data-bs-target="#pet-finder-modal">
                  <h5>Login</h5>
                </a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="collapse navbar-collapse" id="dark-nav">
            <ul class="navbar-nav">
              <li class="nav-item active">
                <a class="nav-link" href="/signup" data-bs-toggle="modal" data-bs-target="">
                  <h5>Sign up</h5>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </header>


  <main class="main-container">
