<div>


  <div class="container-fluid row">
    <div class="container col-6 mt-2 mb-2 pt-2 pb-2 shadow p-3 mb-3 bg-white rounded">
      <div class="deck row m-2" id="{{notecards.[0].deck.id}}">
        <div class="col-2"></div>
        <div class="col-4">Questions</div>
        <div class="col-4">Answers</div>
      </div>

      <div class="cards mt-2 mb-2">
        {{#each notecards as |notecard|}}
