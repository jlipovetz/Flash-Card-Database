      <div class="row m-2">
        <div class="col-1"></div>
        <button type="button" class="btn btn-success add-btn col-4">Add new card</button>
        <div class="col-1"></div>
        <button type="button" class="btn btn-primary save-btn col-4">Save deck</button>
      </div>


    </div>

    <div class="preview container col-12 col-lg-4 p-3 m-2">
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">Deck Name</span>
        <input type="text" class="form-control deck-name" placeholder="Deck Name" aria-label="deck-name"
          aria-describedby="basic-addon1" value="{{notecards.[0].deck.name}}">
      </div>
      <div>
        <h4 class="text-center">Front</h4>
        <div class="front shadow p-3 mb-3 bg-white rounded text-center text-wrap text-break" style="height: 10rem">

        </div>

      </div>
      <div>
        <h4 class="text-center">Back</h4>
        <div class="back shadow p-3 mb-3 bg-white rounded text-center text-wrap text-break" style="height: 10rem">

        </div>

      </div>
    </div>
