<div>


  <div class="container-fluid row">
    <div class="container col-12 col-lg-6 mt-2 mb-2 pt-2 pb-2 shadow p-3 mb-3 bg-white rounded">
      <div class="notecards row m-2" id="{{notecards.[0].deck.id}}">
        <div class="col-2"></div>
        <div class="col-4 d-none d-sm-block">Questions</div>
        <div class="col-4 d-none d-sm-block">Answers</div>
      </div>

      <div class="cards mt-2 mb-2">
        {{#each notecards as |notecard|}}
        <div class="row card-actions m-1">
          <div class="col-2 card-num text-center" id="{{notecard.id}}">
            {{format_loop @index}}
          </div>
          <div class="col-1 d-block d-sm-none">Q:</div>
          <div class="col-9 col-sm-4">
            <input type="text" class="form-control card-question" value="{{notecard.question}}">
          </div>
          <div class="col-2 d-block d-sm-none"></div>
          <div class="col-1 d-block d-sm-none">A:</div>
          <div class="col-9 col-sm-4">
            <input type="text" class="form-control card-answer" value="{{notecard.answer}}">
          </div>
          <div class="col-3 d-block d-sm-none"></div>
          <button type="button" class="btn btn-outline-danger col-9 col-sm-2 delete-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="12" fill="currentColor" class="bi bi-trash"
              viewBox="0 0 16 16">
              <path
